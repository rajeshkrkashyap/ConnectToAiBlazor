<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConnectToAi.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConnectToAi.MobileApp"
    xmlns:view="clr-namespace:ConnectToAi.MobileApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    x:Name="mainShell">
    <ShellContent 
        x:Name="mobileLoginPage" 
        Route="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"/>
    <TabBar>
        <Tab Title="Main">
            <ShellContent
                x:Name="homePage"    
                Title="Home"
                Route="Home"
                ContentTemplate="{DataTemplate view:Home}"/>

            <ShellContent 
                Title="Settings"
                Route="Settings" 
                ContentTemplate="{DataTemplate view:Settings}"/>
        </Tab>
    </TabBar>
</Shell>
